{
  "name": "thesaurus-extension",
  "description": "A Thesaurus popup for Mozilla Firefox",
  "scripts": {
      "precommit": "lint-staged",
      "build": "webpack --config webpack.config.js"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./src/dependencies/**/*.*"
    ]
  },
  "dependencies": {
    "eslint": "^5.3.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "babel-loader": "^8.0.5",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "web-ext": "^2.8.0",
    "webpack": "^4.29.6"
  }
}
