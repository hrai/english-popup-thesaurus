{
  "name": "thesaurus-extension",
  "description": "A Thesaurus popup for Mozilla Firefox",
  "scripts": {
    "start": "web-ext run",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./src/dependencies/**/*.*"
    ]
  },
  "dependencies": {
    "dompurify": "^2.3.0",
    "eslint": "^7.30.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "web-ext": "^6.2.0"
  },
  "version": "0.0.0"
}
