        "git add"
      ]
    },
    "ignore": [
      "./src/dependencies/**/*.*"
    ]
  },
  "dependencies": {
    "dompurify": "^2.0.7",
    "eslint": "^5.3.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "web-ext": "^2.8.0"
  }
}
