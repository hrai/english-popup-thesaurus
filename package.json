{
  "name": "thesaurus-extension",
  "description": "A Thesaurus popup for Mozilla Firefox",
  "scripts": {
    "start":"web-ext run",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./src/dependencies/**/*.*"
    ]
  },
  "dependencies": {
    "dompurify": "^2.2.7",
    "eslint": "^7.22.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.1.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "web-ext": "^6.0.0"
  },
  "version": "0.0.0"
}
